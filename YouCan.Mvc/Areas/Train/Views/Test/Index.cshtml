@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewBag.Title = Localizer["PageTitle"];
    Layout = "_Navbar";
}
<nav class="navbar navbar-light bg-light border-bottom">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <a class="navbar-brand" href="#">
            <img src="/trainImages/logo.png" alt="Logo" />
        </a>
        <span class="navbar-text mx-auto text-center">@Localizer["Train"]</span>
        <div style="width: 100px"></div>
    </div>
</nav>
<div class="container text-center my-3">
    <img src="/trainImages/Group 89.png" alt="Training" class="img-fluid mb-3" />
    <p class="mb-3">
        <strong>
            @Localizer["Description"]
        </strong>
    </p>
    <div class="row justify-content-center mb-4">
        <div class="col-md-5">
            <a asp-controller="Subject" asp-action="Index" asp-route-forCreate="true" style="text-decoration: none; color: inherit;">
            <div class="card mb-3">
                <div class="card-body d-flex align-items-center">
                    <img src="/trainImages/соз.png" alt="Take Test Image" class="img-fluid mr-3" />
                    <div>
                        <h5 class="card-title">@Localizer["CreateTestTitle"]</h5>
                        <p class="card-text">@Localizer["CreateTestSubtitle"]</p>
                    </div>
                </div>
            </div>
            </a>
            <a asp-controller="Subject" asp-action="Index" style="text-decoration: none; color: inherit;">
            <div class="card mb-3">
                <div class="card-body d-flex align-items-center">
                    <img src="/trainImages/пройти.png" alt="Take Test Image" class="img-fluid mr-3" />
                    <div>
                        <h5 class="card-title">@Localizer["TrainTestTitle"]</h5>
                        <p class="card-text">@Localizer["TrainTestSubtitle"]</p>
                    </div>
                </div>
            </div>
            </a>
        </div>
    </div>
</div>