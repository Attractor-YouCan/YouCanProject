@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewBag.Title = @Localizer["PageTitle"];
    Layout = "_Navbar";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-5 m-0">
            <div class="d-flex flex-column justify-content-center align-items-center">
                <img class="img-fluid w-50 d-block mb-3" src="@Url.Content("~/trainImages/coin-bal.png")" />
                <h1>@Localizer["GoodQuestion"]</h1>
                <p>@Localizer["TestSent"]</p>
                <p>@Localizer["Description"]</p>
                <a asp-action="index" asp-controller="test">@Localizer["Return"]</a>
            </div>
        </div>
    </div>
</div>