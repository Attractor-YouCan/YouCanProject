@model List<OrtTest>

@{
    Layout = "_Admin";
}

<div class="row col-10 mx-auto">
    @if (ViewBag.Days != null)
    {
        <h5 class="col-3 text-primary me-3">До орт теста осталось @ViewBag.Days дней</h5>
        <a asp-action="SetOrtTestDate" class="btn btn-warning btn-sm col-2 text-center">Изменить дату орт теста</a>
    }
    else
    {
        <h class="col-3 primary me-3">У орт теста не назначена дата</h>
        <a asp-action="SetOrtTestDate" class="btn btn-warning btn-sm col-2 text-center">Назначить дату</a>
    }
</div>

@if (Model.Count == 0 || Model == null)
{
    <h5> Тестов еще нет !</h5>
}
else
{
    <div class="col-10 mx-auto my-5 ">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">#Id теста</th>
                    <th scope="col">Необходимый уровень</th>
                    <th scope="col">Время на решение</th>
                    <th scope="col">Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ortTest in Model)
                {
                    <tr>
                        <th scope="row">@ortTest.Id</th>
                        <td>@ortTest.OrtLevel</td>
                        <td>@ortTest.TimeForTestInMin</td>
                        <td>
                            <a class="btn btn-outline-success" asp-action="Details" asp-route-ortId="@ortTest.Id">Детали</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
<div class="col-6 mx-auto">
    <a class="btn btn-primary" asp-action="CreateOrt">Создать орт</a>
</div>
