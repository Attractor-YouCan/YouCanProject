@using YouCan.Entities
@model List<Announcement>

@{
    Layout = "_Navbar";
}
<link href="~/css/announcements.css" rel="stylesheet"/>
<section class="light">
	<div class="container py-2">
		<div class="h1 text-center text-dark" id="pageHeaderTitle">Объявления</div>
		@foreach (var an in Model)
		{
			<article class="postcard light blue">
				<a class="postcard__img_link" href="#">
					<img class="postcard__img" src="@an.ImageUrl" alt="Image Title" />
				</a>
				<div class="postcard__text t-dark">
					<h1 class="postcard__title blue"><a href="#">@an.Title</a></h1>
					<div class="postcard__subtitle small">
						<time datetime="2020-05-25 12:00:00">
							<i class="fas fa-calendar-alt mr-2"></i>@an.Created.ToLongDateString()
						</time>
					</div>
					<div class="postcard__bar"></div>
					<div class="postcard__preview-txt">@an.Description</div>
				</div>
			</article>
		}
	</div>
</section>