              {
                <a asp-action="Profile" asp-controller="Account" class="login"> Перейти к профилю</a>
              }
              else
              {
                <a asp-controller="Account" asp-action="Register" class="register">Регистрация</a>
                <a asp-controller="Account" asp-action="Login" class="login">У меня уже есть аккаунт</a>
              }
                
