                    <span class="textLogo">youcan</span>
                </a>

              <div class="user-info dropdown">
                @if (User.Identity.IsAuthenticated)
                {
                <span class="dropdown-toggle fw-bold" role="button" data-bs-toggle="dropdown" aria-expanded="false">@User.Identity.Name</span>

                <ul class="dropdown-menu">
                  <li>
                    <a asp-action="Profile" asp-controller="Account" class="dropdown-item">Профиль - @User.Identity.Name</a>
                  </li>
                  <li>
                    <div class="language-switch">
                      <span style="color: #000">Рус</span>
                      <label class="switch">
                        <input type="checkbox" id="languageSwitch">
                        <span class="slider"></span>
                      </label>
                      <span style="color: #000">Кыр</span>
                    </div>
                  </li>
                  <li><hr class="dropdown-divider"></li>
                  <li>
                    <form class="d-flex justify-content-start dropdown-item" asp-action="LogOut" asp-controller="Account">
                      <button type="submit" class="border-0 bg-transparent ps-3 text-center d-block text-decoration-none link-theme-secondary">Выйти</button>
                    </form>
                  </li>
                </ul>
                }
                else
                {
                <div class="language-switch">
                  <span>Рус</span>
                  <label class="switch">
                    <input type="checkbox" id="languageSwitch">
                    <span class="slider"></span>
                  </label>
                  <span>Кыр</span>
                </div>
                }
              </div>

