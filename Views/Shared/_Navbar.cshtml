<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - YouCan</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Boxicons CSS -->
    <link href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/YouCan.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/navbar.css" />
</head>
<body id="body-pd">
<div class="l-navbar border border-1" id="nav-bar">
    <nav class="nav">
        <div class="nav_list">
            <div class="header_toggle">
                 <i class='bx bx-menu' id="header-toggle"></i>
            </div>
            <a asp-area="@null" asp-controller="Home" asp-action="Index" class="nav_logo nav_link" data-area="@null" data-controller="Home">
                <img src="~/landingIcons/YouCanLogo.png" alt="..." class="bx bx-grid-alt nav_icon book">
                <span class="nav_logo-name">YouCan</span>
            </a>
            <a asp-area="Study" asp-controller="Subtopics" asp-action="Index" class="nav_link" data-area="Study" data-controller="Subtopics">
                <img src="~/navbar_icons/book.png" alt="..." class="bx bx-grid-alt nav_icon book">
                <span class="nav_name">ОБУЧЕНИЕ</span>
            </a>
            <a asp-area="Train" asp-controller="Test" asp-action="Index" class="nav_link" data-area="Train" data-controller="Train">
                <img src="~/navbar_icons/biceps.png" alt="..." class="bx bx-grid-alt nav_icon biceps">
                <span class="nav_name">ТРЕНИРОВКА</span>
            </a>
            <a asp-area="ORT" asp-controller="OrtTests" asp-action="Index" class="nav_link">
                <img src="~/navbar_icons/board.png" alt="..." class="bx bx-grid-alt nav_icon board">
                <span class="nav_name">ТЕСТ</span>
            <a asp-area="@null" asp-controller="Account" asp-action="Rating" class="nav_link" data-area="@null" data-controller="Account">
                <img src="~/navbar_icons/star.png" alt="..." class="bx bx-grid-alt nav_icon star">
                <span class="nav_name">РЕЙТИНГ</span>
            </a>
            <a asp-area="@null" asp-controller="Account" asp-action="Profile" class="nav_link" data-area="@null" data-controller="Account">
                <img src="~/navbar_icons/profile.png" alt="..." class="bx bx-grid-alt nav_icon profile">
                <span class="nav_name">ПРОФИЛЬ</span>
            </a>
            <a href="#" class="nav_link">
                <img src="~/navbar_icons/more.png" alt="..." class="bx bx-grid-alt nav_icon more">
                <span class="nav_name">ЕЩЕ</span>
            </a>
        </div>
    </nav>
</div>
    <nav class="navbar navbar-expand navbar-bottom navbar-light border border-1 justify-content-evenly" id="bottom-navbar">
        <div class="container mx-0">
            <a class="col-2 nav-link" href="#">
                <img class="img-fluid" src="~/navbar_icons/board.png" alt="...">
            </a>
            <a class="col-2 nav-link" asp-area="Train" asp-controller="Test" asp-action="Index">
                <img class="img-fluid" src="~/navbar_icons/biceps.png" alt="...">
            </a>
            <a class="col-2 nav-link" asp-area="Study" asp-controller="Subtopics" asp-action="Index">
                <img class="img-fluid" src="~/navbar_icons/book.png" alt="...">
            </a>
            <a class="col-2 nav-link" href="#">
                <img class="img-fluid" src="~/navbar_icons/star.png" alt="...">
            </a>
            <a class="col-2 nav-link" asp-area="@null" asp-controller="Account" asp-action="Profile" >
                <img class="img-fluid" src="~/navbar_icons/profile.png" alt="">
            </a>
        </div>
    </nav>

    <main role="main">
        @RenderBody()
    </main>

    <!-- jQuery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    <!-- Bootstrap Bundle JS -->
    @* <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"></script> *@
    <script src="~/js/navbar.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>