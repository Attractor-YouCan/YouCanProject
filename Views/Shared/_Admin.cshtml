<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Boxicons CSS -->
    <link href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/admin.css" />
    <link rel="stylesheet" href="~/css/tariff.css">
  </head>

  <body id="body-pd">
    <div class="l-navbar border border-1" id="nav-bar">
        <nav class="nav">
            <div class="nav_list d-block">
                <a class="nav_link mx-auto">
                    <span class="nav_logo-name">YouCan</span>
                </a>
                <a class="nav_link mx-auto first" asp-action="Stat" asp-controller="Stat" asp-area="Admin">
                    <img src="~/adminIcons/stats.png" style="width: 20px; height: 20px" alt="..." class="bx bx-grid-alt nav_icon">
                    <span class="nav_name">Статистика</span>
                </a>
                <a class="nav_link mx-auto" asp-action="Index" asp-controller="Users" asp-area="Admin">
                    <img src="~/adminIcons/users.png" style="width: 20px; height: 20px" alt="..." class="bx bx-grid-alt nav_icon">
                    <span class="nav_name">Пользователи</span>
                </a>
                <a class="nav_link mx-auto" asp-action="Index" asp-controller="AdminAction" asp-area="Admin">
                    <img src="~/adminIcons/users.png" style="width: 20px; height: 20px" alt="..." class="bx bx-grid-alt nav_icon">
                    <span class="nav_name">Действия администраторов</span>
                </a>
                <a class="nav_link mx-auto" asp-action="Index" asp-controller="Study" asp-area="Admin">
                    <img src="~/adminIcons/testing.png" style="width: 20px; height: 20px" alt="..." class="bx bx-grid-alt nav_icon">
                    <span class="nav_name">Обучение</span>
                </a>
                </div>
            @* </div> *@
        </nav>
    </div>

    <main role="main" class="pb-5">
        <div class="container">
            <!-- jQuery -->
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

            <!-- Bootstrap Bundle JS -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
            <script src="~/js/admin.js"></script>

            <script src="~/lib/jquery/dist/jquery.min.js"></script>
            <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

            <script src='https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.1.4/Chart.bundle.min.js'></script>
            <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
            @RenderBody();
        </div>

        

    </main>
    
   </body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}