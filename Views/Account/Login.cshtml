@model LoginViewModel

@{
    ViewBag.Title = "Delivery";
    Layout = "_Layout";
}

<div class="container my-5">
    <div class="row row-cols-1 mt-5">
        <div class="col col-6 mx-auto">
            <div class="row row-cols-2">
                <div class="col col-10 bg-white mx-auto text-center">
                    <div class="row">
                        <div class="col col-12 border border-1 py-4 px-5">
                            <h5>Войти</h5>
                            <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
                                <div class="input-group mt-5">
                                    <div class="validation text-danger" asp-validation-summary="ModelOnly"></div>
                                    <label for="email"><span class="text-danger" asp-validation-for="LoginValue"></span></label>
                                    <div class="input-group">
                                        <input asp-for="LoginValue" type="text" class="form-control" placeholder="Номер телефона или Email" id="email">
                                    </div>
                                </div>
                                <div class="input-group mt-2">
                                    <label for="pass"><span class="text-danger" asp-validation-for="Password"></span></label>
                                    <div class="input-group">
                                        <input asp-for="Password" type="password" class="form-control" placeholder="Password" id="pass" aria-describedby="button-addon1">
                                        <button type="button" id="button-addon1" class="btn password-toggle-icon">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="20px" height="20px" viewBox="0 0 24 24" fill="none">
                                                <path d="M12 16.01C14.2091 16.01 16 14.2191 16 12.01C16 9.80087 14.2091 8.01001 12 8.01001C9.79086 8.01001 8 9.80087 8 12.01C8 14.2191 9.79086 16.01 12 16.01Z" stroke="#000000" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                                                <path d="M2 11.98C8.09 1.31996 15.91 1.32996 22 11.98" stroke="#000000" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                                                <path d="M22 12.01C15.91 22.67 8.09 22.66 2 12.01" stroke="#000000" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                                            </svg>
                                        </button>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary rounded-2 w-100 mt-3">Войти</button>
                            </form>
                        </div>
                        <div class="col col-12 text-center border border-1 mt-4 py-4">
                            <a class="link link-info link-underline link-underline-opacity-0" asp-action="Register">Создать новый аккаунт</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}