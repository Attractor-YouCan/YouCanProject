@model YouCan.Areas.Train.ViewModels.TestViewModel

@{
ViewBag.Title = "title";
Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/lesson-test.css" asp-append-version="true"/>
<style>
    .correct-answer {
        background-color: #d4edda;
        border-color: #c3e6cb;
        color: #155724;
    }

    .wrong-answer {
        background-color: #f8d7da;
        border-color: #f5c6cb;
        color: #721c24;
    }
</style>

<div class="top-layout">
    <a class="close-button" href="javascript:history.back()">
        <img src="~/topicImages/exitButton.svg">
    </a>
</div>

<div class="col-10 col-sm-8 col-md-6 mx-auto mt-5">
    @if (Model.PageViewModel.TotalPages == 0)
    {
    <h5>Вопросов еще пока что нет!</h5>
    }
    else
    {
    <div id="questions-container" data-subtopic-id="@Model.SubjectId" data-current-page="@Model.PageViewModel.PageNumber">
        <div class="question-container text-center" data-question-id="@Model.CurrentQuestion.Id">
            <h4 class="my-4">@Model.SubjectName</h4>
            <span class="fw-bold fs-5">@Model.CurrentQuestion.Instruction</span>
            <div class="question mt-4">
                @Model.CurrentQuestion.Content
            </div>
            @for (int i = 0; i < Model.CurrentQuestion.Answers.Count; i++)
            {
            var answer = Model.CurrentQuestion.Answers[i];
            <label class="answer mt-4" role="button">
                <input type="radio" name="answer-@Model.CurrentQuestion.Id" value="@answer.Id" class="answer-radio">
                <span class="answer-number">@((char)('А' + i))</span>
                <span class="answer-content h-100 w-100">@answer.Content</span>
            </label>
            }
        </div>
    </div>
    <div class="text-center mt-5" id="pagination-container">
        <div class="mb-3">
            <button class="btn btn-secondary shadow py-2 mx-2 px-1 px-lg-4" id="report-question-button" style="background-color: #d3d3d3; color: #555555; border-radius: 10px;">Неправильный вопрос</button>
        </div>
        <div class="d-flex justify-content-center">
            <button class="btn btn-danger shadow py-2 mx-2 px-1 px-lg-4" id="finish-button" style="background-color: #FF7F00; color: white; border-radius: 10px;">Завершить</button>
            <button class="btn btn-success shadow py-2 mx-2 px-1 px-lg-4" id="answer-button" style="background-color: #58CC02; color: white; border: 1px solid #C0C0C0; border-radius: 10px;">Ответить</button>
            <button class="btn btn-primary shadow py-2 mx-2 px-1 px-lg-4" id="next-question-button" style="border-radius: 10px;" disabled>Следующий вопрос</button>
        </div>
    </div>
    }
</div>

<div class="modal fade" id="reportQuestionModal" tabindex="-1" aria-labelledby="reportQuestionModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="reportQuestionModalLabel">Сообщить о неправильном вопросе</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <textarea class="form-control" id="report-text" rows="3" placeholder="Опишите проблему"></textarea>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
                <button type="button" class="btn btn-primary" id="submit-report-button">Отправить</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script src="/js/trainTest.js"></script>
    <script src="~/js/time-tracker.js"></script>
    <script>
    trackTime();

    </script>
}
