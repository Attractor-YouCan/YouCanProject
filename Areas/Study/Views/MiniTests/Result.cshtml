@model bool

@{
    ViewBag.Title = "title";
    Layout = "_Navbar";
}

<div class="col-12 col-sm-10 col-md-10 col-lg-8 mx-auto text-center px-5">
    @if (Model)
    {
        <div class="col-12 mx-auto">
            <img src="~/topicImages/testPassedCheckMark.svg"/>
            <h5 class="mt-5 text-success">Конец Урока!</h5>
            <img class="mt-4" src="~/topicImages/testPassedEmoji.svg"/>
            <p class="mt-3 text-success">Развивайся такими темпами!</p>
            <a asp-action="Index" asp-controller="Lessons" asp-route-subTopicId="@ViewData["SubtopicId"]" class="btn btn-success px-5 py-2">ПРОДОЛЖИТЬ</a>
        </div>
    }
    else
    {
        <div class="col-12 mx-auto">
            <img src="~/topicImages/testnotPassedCheckMark.svg"/>
            <h5 class="mt-5 text-danger">Неудача!</h5>
            <img class="mt-4" src="~/topicImages/testNotPassedEmoji.svg"/>
            <p class="mt-3 text-danger">Ты плохо освоил данный урок!</p>
            <a asp-action="Index" asp-controller="MiniTests" asp-route-lessonId="@ViewData["LessonId"]" class="btn btn-danger px-5 py-2">Повторить</a>
        </div>
    }
</div>

