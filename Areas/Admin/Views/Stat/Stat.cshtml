@{
    Layout = "_Admin";
    List<string> colors = new(){
        "red",
        "orange",
        "cyan",
        "rgba(162, 9, 255, 1)",
        "rgba(255, 0, 168, 1)",
        "green"
    };
    var tariff1 = ViewBag.Tariff1.Name;
    var tariff2 = ViewBag.Tariff2.Name;
    var tariff3 = ViewBag.Tariff3.Name;
}

