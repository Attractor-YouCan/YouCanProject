@model OrtTest

@{
    Layout = "_Admin";
}

<h1>Details</h1>

<div>
    <div class="row d-flex justify-content-between">
        <h4 class="col-9">OrtTest</h4>
        <a class="col-2 btn btn-warning me-5" asp-action="Edit" asp-route-ortId="@Model.Id">
            Редактировать
        </a>
    </div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Уровень орт
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrtLevel)
        </dd>
        <dt class = "col-sm-2">
            Время на тест
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TimeForTestInMin)
        </dd>
        <dt class = "col-sm-2">
            Язык
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Language)
        </dd>
        <dt class="col-sm-2">
            Кол-во баллов
        </dt>
        <dd class="col-sm-10">
            @(Model.Tests.Sum(t => t.Questions.Sum(q => q.Point ?? 0)))
        </dd>
    </dl>
    <div class="mt-3 ms-3">
        <div class="d-flex row justify-content-between mb-3">
            <a id="tests_link" class="link col-9">
                <h4>Тесты</h4>
            </a>
            <a asp-action="CreateTest" asp-route-ortId="@Model.Id" class="btn btn-primary me-5 col-2">Создать тест</a>
        </div>
        <div id="tests" style="display: none;">
            @if (Model.Tests == null || Model.Tests.Count == 0)
            {
                <p>Тестов пока нет</p>
            }
            else
            {
                @foreach (var tests in Model.Tests)
                {
                    <dl class="row">
                        <dt class="col-sm-2">
                            Предмет
                        </dt>
                        <dd class="col-sm-10">
                            @tests.Subject.Name
                        </dd>
                        <dt class="col-sm-2">
                            Время
                        </dt>
                        <dd class="col-sm-10">
                            @tests.TimeForTestInMin
                        </dd>
                        <dt class="col-sm-2">
                            Кол-во вопросов
                        </dt>
                        <dd class="col-sm-10">
                            @tests.OrtInstruction.QuestionsCount
                        </dd>
                        <dt class="col-sm-2">
                            Кол-во баллов
                        </dt>
                        <dd class="col-sm-10">
                            @(tests.Questions.Sum(q => q.Point ?? 0))
                        </dd>
                    </dl>

                    <div class="d-flex row justify-content-between mb-5">
                        <a id="questions_link@(tests.Id)" class="link mb-3 col-7" onclick="showQuestions(@tests.Id)">
                            <h5>Вопросы</h5>
                        </a>
                        <div class="col-4 me-5 row d-flex justify-content-between">
                            <a asp-action="CreateQuestions" asp-route-testId="@tests.Id" class="btn btn-primary btn-sm col-5">Добавить вопрос</a>
                            <a asp-action="EditTest" asp-route-testId="@tests.Id" class="btn btn-warning btn-sm col-5">Редактировать тест</a>
                        </div>
                    </div>
                    <div class="mt-3" id="questions@(tests.Id)" style="display: none;">
                        @if (tests.Questions == null || tests.Questions.Count == 0)
                        {
                            <p>Вопросов еще нет</p>
                        }
                        else
                        {
                            @foreach (var question in tests.Questions)
                            {
                                <div class="ms-3 mt-3 border border-1 mb-3">
                                    <dl class="row p-3">
                                        <dt class="col-sm-2">
                                            Вопрос
                                        </dt>
                                        <dd class="col-sm-10">
                                            @question.Instruction
                                        </dd>
                                        <dt class="col-sm-2">
                                            Данные
                                        </dt>
                                        <dd class="col-sm-10">
                                            @question.Content
                                        </dd>
                                        <dt class="col-sm-2">
                                            Кол-во баллов
                                        </dt>
                                        <dd class="col-sm-10">
                                            @question.Point
                                        </dd>
                                    </dl>

                                    <div class="mt-3 ms-3">
                                        <h6 class="mt-3">Ответы</h6>
                                        @foreach (var answer in question.Answers)
                                        {
                                            <dl class="row ms-3 mt-3">
                                                @if (answer.IsCorrect)
                                                {
                                                    <dt class="col-sm-2 text-success">
                                                        Ответ
                                                    </dt>
                                                    <dd class="col-sm-10 text-success">
                                                        @answer.Content
                                                    </dd>
                                                }
                                                else
                                                {
                                                    <dt class="col-sm-2 text-danger">
                                                        Ответ
                                                    </dt>
                                                    <dd class="col-sm-10 text-danger">
                                                        @answer.Content
                                                    </dd>
                                                }
                                            </dl>
                                        }
                                    </div>
                                </div>
                            }
                        }
                    </div>
                }
            }
        </div>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<script>
    $('#tests_link').click(function () {
        $('#tests').toggle(500);
    });
    function showQuestions (id){
        $('#questions' + id).toggle(200);
    }
</script>