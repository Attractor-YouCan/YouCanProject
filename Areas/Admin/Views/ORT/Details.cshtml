@model OrtTest

@{
    Layout = "_Admin";
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>OrtTest</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrtLevel)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrtLevel)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TimeForTestInMin)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TimeForTestInMin)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Language)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Language)
        </dd>
    </dl>
    <div class="mt-3 ms-3">
        <h4>Тесты</h4>
        @foreach (var tests in Model.Tests)
        {
            <dl class="row">
                <dt class="col-sm-2">
                    Предмет
                </dt>
                <dd class="col-sm-10">
                    @tests.Subject.Name
                </dd>
                <dt class="col-sm-2">
                    Время
                </dt>
                <dd class="col-sm-10">
                    @tests.OrtInstruction.TimeInMin
                </dd>
                <dt class="col-sm-2">
                    Кол-во вопросов
                </dt>
                <dd class="col-sm-10">
                    @tests.OrtInstruction.QuestionsCount
                </dd>
            </dl>


            <h5>Вопросы</h5>
            @foreach (var question in tests.Questions)
            {
                <div class="ms-3 mt-3 border border-1 border-dark mb-3">
                    <dl class="row p-3">
                        <dt class="col-sm-2">
                            Вопрос
                        </dt>
                        <dd class="col-sm-10">
                            @question.Instruction
                        </dd>
                        <dt class="col-sm-2">
                            Данные
                        </dt>
                        <dd class="col-sm-10">
                            @question.Content
                        </dd>
                        <dt class="col-sm-2">
                            Кол-во баллов
                        </dt>
                        <dd class="col-sm-10">
                            @question.Point
                        </dd>
                    </dl>

                    <div class="mt-3 ms-3">
                        <h6 class="mt-3">Ответы</h6>
                        @foreach (var answer in question.Answers)
                        {
                            <dl class="row ms-3 mt-3">
                                @if (answer.IsCorrect)
                                {
                                    <dt class="col-sm-2 text-success">
                                        Контент
                                    </dt>
                                    <dd class="col-sm-10 text-success">
                                        @answer.Content
                                    </dd>
                                }
                                else
                                {
                                    <dt class="col-sm-2 text-danger">
                                        Контент
                                    </dt>
                                    <dd class="col-sm-10 text-danger">
                                        @answer.Content
                                    </dd>
                                }
                            </dl>
                        }
                    </div>
                </div>
            }
        }
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
