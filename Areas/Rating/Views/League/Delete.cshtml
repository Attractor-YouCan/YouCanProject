@model YouCan.Entities.League

@{
    ViewData["Title"] = "Delete League";
}

<h2>Delete League</h2>

<h3>Are you sure you want to delete this league?</h3>
<div>
    <h4>League</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            League Name
        </dt>
        <dd class="col-sm-10">
            @Model.LeagueName
        </dd>
        <dt class="col-sm-2">
            Min Points
        </dt>
        <dd class="col-sm-10">
            @Model.MinPoints
        </dd>
        <dt class="col-sm-2">
            Max Points
        </dt>
        <dd class="col-sm-10">
            @Model.MaxPoints
        </dd>
        <dt class="col-sm-2">
            Start Date
        </dt>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>